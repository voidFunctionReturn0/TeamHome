<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.login.LoginFragment"
    android:orientation="vertical"
    android:background="#003366">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo"
            android:layout_weight="2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:layout_weight="4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:gravity="top|bottom">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/login_user_icon" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtId"
                    android:layout_marginLeft="20dp"
                    android:hint="username"
                    android:textColorHint="#FFC0C0C0"
                    android:maxLength="15"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:inputType="text"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView4"
                    android:background="@drawable/login_pass_icon" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPwd"
                    android:layout_marginLeft="20dp"
                    android:hint="userpassword"
                    android:inputType="textPassword"
                    android:textColorHint="#FFC0C0C0"
                    android:maxLength="18"
                    android:textColor="#ffffff"
                    android:layout_gravity="top"
                    android:textAlignment="center" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnJoin"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:textColor="#003366"
                    android:text="Sign"
                    android:textSize="25dp"
                    android:backgroundTint="#A6B8CA" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20px" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnLogin"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:textSize="25dp"
                    android:textColor="#003366"
                    android:text="Login"
                    android:backgroundTint="#A6B8CA" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
